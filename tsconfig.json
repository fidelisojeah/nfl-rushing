{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./build",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "target": "es2018",
        "noImplicitThis": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "inlineSourceMap": true
    },
    "include": ["src"]
}
